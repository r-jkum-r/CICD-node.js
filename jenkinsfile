pipeline {
    agent any

    tools {
        nodejs 'nodejs'
    }
    stages {
        stage('clone') {
            steps {
                git 'https://github.com/r-jkum-r/CICD-node.js.git'
            }
        }
        stage('install') {
            steps {
                sh 'npm install'
            }
        }
        stage('test') {
            steps {
                sh 'npm test'
            }
        }
        stage('build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}